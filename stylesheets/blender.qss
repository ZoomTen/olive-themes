QMainWindow,
QDialog,
QDockWidget,
QToolBar,
EffectControls QWidget QSplitter QScrollArea *,
Project *{
	background-color: rgb(102, 102, 102);
}

/* separators */
QMainWindow::separator {
    background:rgb(80,80,80);
    border: 0;
    spacing: 0;
    padding: 0;
}

/* tabs */
QTabBar::tab{background-color: rgb(58,58,58);color: rgb(111, 111, 111);border:none;border-top-left-radius:6px;border-top-right-radius:6px;}
QTabBar::tab:selected{background-color: rgb(77,77,77);color:white;}
QTabWidget QWidget QWidget{background-color:rgb(77,77,77); color:white;}

/* icon padding */
#project_toolbar *,
#timeline_toolbar *{padding:2px; margin:3px}

/* buttons */
QPushButton{color:white;padding:4px;border:1px solid #222;padding:2px 0;border-radius:5px;spacing:2px; background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(90, 90, 90, 255), stop:1 rgba(62, 62, 62, 255));}
QPushButton:hover{background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(95, 95, 95, 255), stop:1 rgba(92, 92, 92, 255));}
QPushButton:pressed{ background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(128, 173, 240, 255), stop:1 rgba(168, 206, 252, 255));color:black; }
QPushButton:disabled{ background-color: rgb(70,70,70); }
QPushButton:checked{ background-color: black; }

/* fix qmenu */
QMenu:hover,QMenu::item:selected{background-color:rgb(42, 130, 218);}
QPushButton[text]{padding:2px 10px;}

/* input */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QComboBox{padding:3px;}
QLineEdit, QTextEdit{border-radius:5px;background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(154, 154, 154, 255), stop:1 rgba(176, 176, 176, 255));border:1px solid rgb(64,64,64);color:black}
QSpinBox, QDoubleSpinBox, QComboBox{border:1px solid #222;border-radius:6px;background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(81, 81, 81, 255), stop:1 rgba(56, 56, 56, 255));color:white;}

/* spinbox and combobox, borrowed from qt's example styles */
QSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 10px;
    border-image: url(:/icons/tri-up.svg) 1;
    border-width: 1px;
    margin-right:3px;
}
QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 10px;
    border-image: url(:/icons/tri-down.svg) 1;
    border-width: 1px;
    margin-right:3px;
}
QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 10px;
    border-image: url(:/icons/tri-up.svg) 1;
    border-width: 1px;
    margin-right:3px;
}
QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 10px;
    border-image: url(:/icons/tri-down.svg) 1;
    border-width: 1px;
    margin-right:3px;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 16px;
    border:none;
}
QComboBox::down-arrow {
    border-image: url(:/icons/tri-down.svg) 1;
    border-width: 1px;
}